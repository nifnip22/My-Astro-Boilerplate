---
import Button from '../../../components/Button.astro';
import Input from '../../../components/Input.astro';
import AuthLayout from '../../../layouts/AuthLayout.astro';

const user = Astro.locals.user;

console.log(user);

if (Astro.locals.user) {
	return Astro.redirect("/");
}
---

<AuthLayout title='Login'>
	<form method='post' action='/api/auth/login' class='flex flex-col space-y-8'>
		<Input context='email' label='Email' type='email' placeholder='johndoe@example.com' />
		<Input context='password' label='Password' type='password' placeholder='********' />
		<div class='flex flex-col sm:flex-row justify-between gap-y-2'>
			<a href='/auth/register' class='hover:text-gray-300'>Don't have an account?</a>
			<a href='' class='hover:text-gray-300'>Forgot password?</a>
		</div>
		<Button title='Login' variant='secondary' />
	</form>
</AuthLayout>

<style>
	a {
		font-family: 'Inter', sans-serif;
		font-optical-sizing: auto;
		font-weight: <weight>;
		font-style: normal;
	}

	button,
	input,
	input::placeholder {
		font-family: 'Source Code Pro', monospace;
		font-optical-sizing: auto;
		font-weight: <weight>;
		font-style: normal;
	}
</style>