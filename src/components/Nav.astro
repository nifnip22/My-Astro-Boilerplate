---
const { name } = Astro.props;
---

<nav class="w-full py-6 bg-zinc-800 flex items-center justify-between px-8 md:px-12 lg:px-20 xl:px-40 2xl:px-80">
    <div class="flex items-center gap-x-6">
        <img src="/img/logo/astro-icon-light-gradient.svg" alt="" class="w-8 h-8">
        <a href="" class="text-lg text-gray-100 font-bold">Active link</a>
        <a href="" class="text-lg text-gray-100/50 hover:text-gray-100/70">link</a>
    </div>
    <div class="flex items-center gap-x-6">
        <a href="#" class="text-lg text-gray-100 hover:text-gray-300">{name}</a>
        <form method="post" action="/api/auth/logout" enctype="multipart/form-data">
            <button type="submit">Sign out</button>
        </form>
    </div>
</nav>